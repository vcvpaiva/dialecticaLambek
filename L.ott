A, B, C :: 'form_' ::=
  | I    ::   :: I
  {{tex I }}  
  | A (x) B :: :: Tensor
  {{tex [[A]] \otimes [[B]] }}  
  | A -> B :: :: RImp
  {{tex [[A]] \rightharpoonup [[B]] }}
  | A <- B :: :: LImp
  {{tex [[A]] \leftharpoonup [[B]] }}
  | ! A     ::   :: OfCourse
  {{tex ! [[A]] }}
  | E A     ::   :: Exchange
  {{tex \kappa [[A]] }}
  | ( A )   :: M :: Parens 
  | h( A )  :: M :: HiddenParens 
  {{ tex [[A]] }}

p :: 'pat_' ::=
  | punit :: :: UnitPatter
  {{tex \mathsf{unit} }}
  | - :: :: Hole
  | x :: :: Var
  | p1 (x) p2 :: :: Tensor
  {{tex [[p1]] \otimes [[p2]] }}

t :: 'term_' ::=
  | x                 :: :: Var
  | unit              :: :: Unit  
  {{tex \mathsf{unit} }}
  | appl t1 t2        :: :: Applicationl
  {{tex \mathsf{app}_l\,[[t1]]\,[[t2]] }}
  | appr t1 t2        :: :: Applicationr
  {{tex \mathsf{app}_r\,[[t1]]\,[[t2]] }}  
  | t1 (x) t2         :: :: Tensor
  {{tex [[t1]] \otimes [[t2]] }}
  | \l x : A . t      :: :: LambdaL
  {{tex \lambda_l [[x]]:[[A]].[[t]] }}
  | \r x : A . t      :: :: LambdaR
  {{tex \lambda_r [[x]]:[[A]].[[t]] }}  
  | let t1 be p in t2 :: :: Let
  {{tex \mathsf{let}\,[[t1]]\,\mathsf{be}\,[[p]]\,\mathsf{in}\,[[t2]] }}
  | { t }             :: S :: Parens
  {{tex ( [[t]] ) }}
  | [ t1 / x ] t2     :: M :: Sub
  | h( t )            :: M :: HiddenParens 
  {{ tex [[t]] }}
  
% Contexts:
G {{tex \Gamma}}, D {{tex \Delta}} :: 'G_' ::=
  | .           ::   :: Empty
  {{tex \cdot }}
  | A           ::   :: El
  | x : A       ::   :: TEl
  | G , G'      ::   :: Ext
  | ( G )       :: S :: Paren
  | !{ G }      :: M :: OfCourse
  {{tex ! [[G]] }}
  | E{ G }      :: M :: Exchange
  {{tex \kappa [[G]] }}  
  | h( G )      :: M :: HiddenParens 
  {{ tex [[G]] }}   
  
